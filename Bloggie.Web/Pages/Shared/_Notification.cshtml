@using Bloggie.Web.Models.ViewModel;

@{
	var notification = ViewData["Notification"] as Notification;
	if (notification != null)
	{
		var notificationClass = "";
		switch (notification.Type)
		{
			case Web.Enum.NotificationType.Success:
				notificationClass = "alert-success";
				break;
			case Web.Enum.NotificationType.Error:
				notificationClass = "alert-danger";
				break;
			case Web.Enum.NotificationType.Info:
				notificationClass = "alert-info";
				break;
			default:
				notificationClass = "";
				break;
		}
		<div class="container mb-5">
			<div class="alert @notificationClass alert-dismissible fade show mb-5" role="alert">
				@Html.Raw(notification.Message)
				<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
			</div>
		</div>
	}
}
